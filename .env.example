# Builder.io Key
VITE_PUBLIC_BUILDER_KEY=__BUILDER_PUBLIC_KEY__
PING_MESSAGE="ping pong"

# MongoDB Connection
# For local MongoDB: mongodb://localhost:27017/nouvelle-acad
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/nouvelle-acad?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/nouvelle-acad

# JWT Secret (generate a random secret string, minimum 32 characters)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate-a-random-secret-here

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development

# Frontend API URL (used by Vite frontend)
VITE_API_URL=http://localhost:5000/api
